    private void divActionPerformed(java.awt.event.ActionEvent evt) {                                    
        oper='/';
        b=a;
        a=0;
        str="";
    }                                   

    private void addActionPerformed(java.awt.event.ActionEvent evt) {                                    
        oper='+';
        b=a;
        a=0;
        str="";
    }                                   

    private void subActionPerformed(java.awt.event.ActionEvent evt) {                                    
        oper='-';
        b=a;
        a=0;
        str="";
    }                                   

    private void multiActionPerformed(java.awt.event.ActionEvent evt) {                                      
        oper='*';
        b=a;
        a=0;
        str="";
    }                                     

    private void deleteActionPerformed(java.awt.event.ActionEvent evt) {                                       
        a=0;b=0;
        display.setText("");
        
    }                                      

    private void eqlActionPerformed(java.awt.event.ActionEvent evt) {                                    
         switch(oper){
            case '+':
             display.setText(""+(a+b));
             a=a+b;str="";
                break;
            case '-':
              display.setText(""+(b-a));
              a=b-a;str="";
                break;
            case '/':
              display.setText(""+(b/a));
              a=b/a;str="";
                break;
            case '*':
              display.setText(""+(b*a));
              a=b*a;str="";
                break;
        }
        
    }                                   

    
